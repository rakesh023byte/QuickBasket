<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_rounded"
            android:contentDescription="Product Image" />

        <!-- Product Details & Controls -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golden Apple"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹500000"
                android:textColor="#388E3C"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_quantity_box"
                android:paddingHorizontal="6dp"
                android:paddingVertical="4dp">

                <ImageButton
                    android:id="@+id/btnDecrement"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Decrease"
                    android:src="@drawable/ic_remove"
                    app:tint="@color/colorPrimaryDark"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="14sp"
                    android:textColor="#000" />

                <ImageButton
                    android:id="@+id/btnIncrement"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Increase"
                    android:src="@drawable/ic_add"
                    app:tint="@color/colorPrimaryDark"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:layout_marginHorizontal="8dp"
                android:weightSum="2">

                <!-- Save for Later Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveForLater"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:text="Later"
                    android:textColor="@color/colorPrimary"
                    app:cornerRadius="12dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <!-- Remove Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRemove"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:text="Remove"
                    android:textColor="@android:color/holo_red_dark"
                    app:cornerRadius="12dp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>
